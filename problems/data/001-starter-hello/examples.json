[
  {
    "name": "main",
    "requests": [
      {
        "description": "return plain text `world`",
        "request": {
          "method": "GET",
          "url": "/hello"
        },
        "response": {
          "status": 200,
          "responseType": "plain",
          "body": "world"
        }
      },
      {
        "description": "return the JSON object",
        "request": {
          "method": "GET",
          "url": "/hello-json"
        },
        "response": {
          "status": 200,
          "headers": {
            "Content-Type": "application/json"
          },
          "body": {"hello": "world"}
        }
      }
    ]
  }
]