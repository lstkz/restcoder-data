{
  "swagger": "2.0",
  "info": {
    "title": "Starter: Hello world",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "paths": {
    "/hello": {
      "get": {
        "description": "Get the word `world`",
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/hello-json": {
      "get": {
        "description": "Get the json object.",
        "responses": {
          "200": {
            "description": "Successful response  \nIn JSON responses always return a header: `Content-Type`: `application/json`",
            "schema": {
              "properties": {
                "hello": {"type": "string"}
              }
            }
          }
        }
      }
    }
  }
}